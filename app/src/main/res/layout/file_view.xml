<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fileView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/round_top_ex_light_green"
    android:elevation="10dp">

    <LinearLayout
            android:id="@+id/topPart"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/endPart"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/iconCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                app:cardCornerRadius="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/fileIcon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:contentDescription="@string/todo"
                        android:src="@drawable/file_icon" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="20sp"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry">
                <TextView
                    android:id="@+id/fileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/name"
                    android:textAlignment="center"
                    android:textColor="#061832" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fileSize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#104BA1"
                        android:textSize="12sp"
                        android:text="Size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textColor="#104BA1"
                        android:textSize="12sp"
                        android:text="@string/mb" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:id="@+id/endPart"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/s_white"
            android:backgroundTint="@color/s_white"
            android:src="@drawable/ic_send_arrow"
            app:borderWidth="0dp"
            app:fabSize="normal" />
    </LinearLayout>

</RelativeLayout>